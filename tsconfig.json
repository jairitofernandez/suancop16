{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "node", // Cambiado de 'bundler' a 'node'
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true, // Asegurar que est√© en 'true'
    "jsx": "preserve",
    "incremental": true,
    "types": ["node"],
    "paths": {
      "@/*": ["./*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
